{
  "name": "bluesphere-site",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "build:render": "npm install && next build",
    "start": "next start -p ${PORT:-4000}",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --project=chromium --grep=visual",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:api && npm run test:e2e",
    "export": "next build",
    "build:github": "DEPLOYMENT_TARGET=github-pages next build",
    "build:render": "next build",
    "deploy:preview": "npm run build && npm start"
  },
  "dependencies": {
    "@react-leaflet/core": "^2.1.0",
    "@types/leaflet": "^1.9.20",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "leaflet": "^1.9.4",
    "next": "14.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-leaflet": "^4.2.1",
    "remark": "^14.0.3",
    "remark-html": "^16.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "autoprefixer": "10.4.20",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "8.4.41",
    "tailwindcss": "3.4.10",
    "typescript": "5.9.2"
  },
  "author": "Mark Lindon",
  "license": "MIT"
}
